<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_marginBottom="16dp"
        android:contentDescription="Profile Picture"
        android:scaleType="centerCrop"
        android:padding="8dp"
        android:onClick="onProfilePictureClick" />

    <!-- Name Edit Text -->
    <EditText
        android:id="@+id/edit_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:text="John Doe"
        android:gravity="center"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="8dp" />

    <!-- Email Edit Text -->
    <EditText
        android:id="@+id/edit_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Email"
        android:text="johndoe@example.com"
        android:gravity="center"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="8dp" />

    <!-- Bio Edit Text -->
    <EditText
        android:id="@+id/edit_user_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Bio"
        android:gravity="center"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp" />

    <!-- Save Changes Button -->
    <Button
        android:id="@+id/edit_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE CHANGES"
        android:background="#8000FF"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp" />

    <!-- Back to Home Button -->
    <Button
        android:id="@+id/btnBackToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK TO HOME"
        android:layout_marginBottom="24dp" />

    <!-- Color Palette for Background Color Selection -->
    <LinearLayout
        android:id="@+id/color_palette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/color_red"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#F44336" />
        <Button
            android:id="@+id/color_blue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#2196F3" />
        <Button
            android:id="@+id/color_purple"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#9C27B0" />
        <Button
            android:id="@+id/color_pink"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#E91E63" />
        <Button
            android:id="@+id/color_black"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#000000" />
    </LinearLayout>

</LinearLayout>