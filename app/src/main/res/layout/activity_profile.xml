<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/color_palette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/color_red"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#F44336" />

        <Button
            android:id="@+id/color_blue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#2196F3"
            android:layout_marginStart="8dp"/>
        <Button
            android:id="@+id/color_purple"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#9C27B0"
            android:layout_marginStart="8dp"/>
        <Button
            android:id="@+id/color_pink"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#E91E63"
            android:layout_marginStart="8dp"/>
        <Button
            android:id="@+id/color_black"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#000000"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <View
            android:id="@+id/profile_banner"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#CCCCCC" />

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@android:drawable/sym_def_app_icon"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="-60dp"
            android:contentDescription="Profile Picture"
            android:scaleType="centerCrop"
            android:padding="8dp"
            android:onClick="onProfilePictureClick" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <EditText
            android:id="@+id/edit_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Name"
            android:text="John Doe"
            android:gravity="center"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email"
            android:text="johndoe@example.com"
            android:gravity="center"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_user_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Bio"
            android:gravity="center"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/edit_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE CHANGES"
            android:background="#8000FF"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnBackToHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK TO HOME"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</LinearLayout>